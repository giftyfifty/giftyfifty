<div class="event-gift span-24 last">
  <div class="span-6">
    <%= image_tag @event.item.image_url, :size => '50%'%>
  </div>
  <div class="span-18 last">
    <%= content_tag 'h1', @event.item.name %>
    <%= content_tag 'h3', 'By ' + @event.provider.name.humanize %>
    <%= content_tag 'h3', number_to_currency((@event.item.price.to_i/100)) %>
  </div>
  <div class="span-24 last">
    <p>
      <%= label_tag 'title:' %><br/>
      <%= @event.title %>
    </p>
  
    <p>
      <%= label_tag 'description:' %><br/>
      <%= @event.description %>
    </p>
  
    <p>
      <%= label_tag 'start:' %>
      <%= @event.start_at %>
    
      <%= label_tag 'end:' %>
      <%= @event.end_at %>
    </p>
  
    <p>
      <%= label_tag 'event:' %><br/>
      <%=  @event.occasion.name.humanize if @event.occasion %>
    </p>  
  </div>
  <% if is_owner? %>
    <div class="span-24">
      <%= content_tag 'h1', 'Share Your Gift'%>
      <%= twitter_link %>
      <%= facebook_link %>
    </div>
  <% end %>
</div>