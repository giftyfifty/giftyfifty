<div class="event-gift span-15">
  <div class="span-6">
    <%= image_tag @event.item.image_url, :size => '50%'%>
  </div>
  <div class="span-16 last">
    <%= content_tag 'h1', @event.item.name %>
    <%= content_tag 'h3', 'By ' + @event.provider.name.humanize %>
    <%= content_tag 'h3', number_to_currency((@event.item.price.to_i/100)) %>
  </div>
  <div class="span-24 last">
    <p>
      <%= label_tag 'title:' %><br/>
      <%= @event.title %>
    </p>
  
    <p>
      <%= label_tag 'description:' %><br/>
      <%= @event.description %>
    </p>
  
    <p>
      <%= label_tag 'start:' %>
      <%= @event.start_at %>
    
      <%= label_tag 'end:' %>
      <%= @event.end_at %>
    </p>
  
    <p>
      <%= label_tag 'event:' %><br/>
      <%=  @event.occasion.name.humanize if @event.occasion %>
    </p>  
  </div>
  <% if is_owner? %>
    <div class="span-24">
      <%= content_tag 'h1', 'Share Your Gift'%>
      <%= twitter_link %>
      <%= facebook_link %>
    </div>
  <% else %>
    <%= link_to 'Donate', new_event_donation_path(@event)%>
  <% end %>
</div>

<div class="span-6 last">
  <div id="donation_bar">
    <%= @event.porcentage_donation%>% close of your gift.
    <div id="progressbar"></div>
    <hr />
    <p>
      This celebration ends in:
      <p id="rest_days">
        <%= @event.rest_days %> days.
      </p>
    </p>
  </div>
</div>

<% content_for :scripts do %>
  <script>
    $(function() {
      $( "#progressbar" ).progressbar({
        value: <%= @event.porcentage_donation %>
      });
    });
  </script>
<% end %>